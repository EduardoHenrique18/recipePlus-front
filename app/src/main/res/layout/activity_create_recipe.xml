<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:layout_marginTop="92dp"
        android:text="Criar receita"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_recipe_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="criar"
        app:layout_constraintEnd_toEndOf="@+id/CreateRecipe_product"
        app:layout_constraintStart_toStartOf="@+id/CreateRecipe_product"
        app:layout_constraintTop_toBottomOf="@+id/CreateRecipe_product" />

    <EditText
        android:id="@+id/createRecipe_description"
        android:layout_width="255dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/createRecipe_prepareMethod"
        android:layout_width="255dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Modo de preparo"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/createRecipe_description"
        app:layout_constraintStart_toStartOf="@+id/createRecipe_description"
        app:layout_constraintTop_toBottomOf="@+id/createRecipe_description" />

    <EditText
        android:id="@+id/CreateRecipe_yield"
        android:layout_width="255dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Rendimento"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/createRecipe_prepareMethod"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createRecipe_prepareMethod"
        app:layout_constraintTop_toBottomOf="@+id/createRecipe_prepareMethod" />

    <EditText
        android:id="@+id/CreateRecipe_product"
        android:layout_width="255dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Produtos"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/CreateRecipe_yield"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CreateRecipe_yield"
        app:layout_constraintTop_toBottomOf="@+id/CreateRecipe_yield" />

</androidx.constraintlayout.widget.ConstraintLayout>